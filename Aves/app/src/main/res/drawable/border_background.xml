<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/border_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item android:drawable="@android:color/white" />
    <!-- Border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed for the desired curve -->
            <stroke
                android:width="2dp"
                android:color="@color/dark_green" /> <!-- Adjust the color and width as needed -->
        </shape>
    </item>
</layer-list>
