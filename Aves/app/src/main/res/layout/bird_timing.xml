<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F2E9"
    tools:context=".BirdTiming">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="451dp"

            android:text="0:00:00"
            android:textSize="60sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="80dp"
            android:onClick="onStop"
            android:src="@drawable/ic_stop"
            app:backgroundTint="#FF5722"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="80dp"
            android:onClick="onStart"
            android:src="@drawable/ic_play"
            app:backgroundTint="#4CAF50"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/reset"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="80dp"
            android:onClick="onReset"
            android:src="@drawable/ic_refresh"
            app:backgroundTint="#FF034A"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="10dp"
            android:text="Go Back"
            app:backgroundTint="#CD8910"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/historyBtn"
            android:layout_width="152dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="252dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="699dp"
            android:text="History"
            app:backgroundTint="#09C610"
            tools:ignore="TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/spinnerBtn"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textview"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="96dp"

            android:layout_marginBottom="624dp"
            app:backgroundTint="#CD8910"
            tools:ignore="TouchTargetSizeCheck" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>